@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Application</MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>

                <MudMenu @ref="authorizedMenuRef" FullWidth="false" Color="Color.Inherit" ActivationEvent="@MouseEvent.LeftClick"
                         AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.BottomLeft"
                         DisableAutoClose="false">
                    <ActivatorContent>
                        <MudAvatar Color="Color.Warning" Variant="Variant.Outlined">
                            GM
                            @* <MudImage Src="images/toiletvisit.jpg" /> *@
                        </MudAvatar>
                    </ActivatorContent>
                    <ChildContent>
                        <MudPaper Width="240px" Class="mud-shadow-4" Style="padding: 4px;">
                            <MudList T="string">
                                <MudListItem Href="/logout" Text="Log Out" Icon="@Icons.Material.Filled.Logout" OnClick="@(() => authorizedMenuRef.CloseMenuAsync())" />
                                <MudListItem Href="/about" Text="About" Icon="@Icons.Material.Filled.Info" OnClick="@(() => authorizedMenuRef.CloseMenuAsync())" />
                                <MudDivider />
                                <MudListItem Text="Settings" SecondaryText="Your Documancer account settings." OnClick="@(() => authorizedMenuRef.CloseMenuAsync())" />
                            </MudList>
                        </MudPaper>
                    </ChildContent>
                </MudMenu>

            </Authorized>
            <NotAuthorized>
                <MudButton Href="/login" Variant="Variant.Filled" Color="Color.Secondary" Style="margin-right: 16px;">Log In</MudButton>

                <MudMenu @ref="unauthorizedMenuRef" FullWidth="false" Color="Color.Inherit" ActivationEvent="@MouseEvent.LeftClick"
                         AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.BottomLeft"
                         DisableAutoClose="false">
                    <ActivatorContent>
                        <MudIconButton Icon="@Icons.Material.Filled.MoreHoriz" />
                    </ActivatorContent>
                    <ChildContent>
                        <MudPaper Width="240px" Class="mud-shadow-4" Style="padding: 4px;">
                            <MudList T="string">
                                <MudListItem Href="/login" Text="Log In / Sign Up" Icon="@Icons.Material.Filled.Login" OnClick="@(() => unauthorizedMenuRef.CloseMenuAsync())" />
                                <MudListItem Href="/about" Text="About" Icon="@Icons.Material.Filled.Info" OnClick="@(() => unauthorizedMenuRef.CloseMenuAsync())" />
                            </MudList>
                        </MudPaper>
                    </ChildContent>
                </MudMenu>

            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code
{
    private MudMenu authorizedMenuRef;
    private MudMenu unauthorizedMenuRef;

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}